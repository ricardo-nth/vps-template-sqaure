---
import SiteLayout from '@layouts/SiteLayout.astro';
import TeamSection from '@components/TeamSection.astro';
import PageHero from '@components/PageHero.astro';

const metadata = {
  title: 'About Us - [Business Name]',
  description: '[Your about page description - your mission and what makes you different]',
  schema: {
    '@context': 'https://schema.org',
    '@type': 'AboutPage',
    name: 'About Us',
    description: '[Your story, values, and team description]'
  }
};

// Data Structures - Update with your statistics
const stats = [
  { value: '[X]+', label: '[Your Stat 1]' },
  { value: '[X]+', label: '[Your Stat 2]' },
  { value: '[X]%', label: '[Your Stat 3]' },
  { value: '[X/7]', label: '[Your Stat 4]' },
];

const values = [
  {
    title: '[Value 1 Title]',
    description: '[Description of your first core value and how it guides your work]',
    icon: 'heart'
  },
  {
    title: '[Value 2 Title]',
    description: '[Description of your second core value and how it guides your work]',
    icon: 'award'
  },
  {
    title: '[Value 3 Title]',
    description: '[Description of your third core value and how it guides your work]',
    icon: 'user'
  },
  {
    title: '[Value 4 Title]',
    description: '[Description of your fourth core value and how it guides your work]',
    icon: 'users'
  }
];

const storyContent = {
  heading: "[Your Story Heading]",
  subheading: "[Your story subheading - your journey in one line]",
  paragraphs: [
    "[First paragraph of your story - how and why you started]",
    "[Second paragraph - your growth and what makes you different]",
    "[Third paragraph - your commitment and vision for the future]"
  ]
};

---

<SiteLayout metadata={metadata}>
  
  <PageHero
    heading='[Your About Page Headline] <span class="text-accent">[Highlighted Text]</span>'
    subheading="[Your about page subheading - what you do and what you believe in]"
    primaryCtaText="Get in Touch"
    primaryCtaHref="/contact"
    secondaryCtaText="Read Our Story"
    secondaryCtaHref="#story"
    imageSrc="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
    imageAlt="[Your team or office image description]"
  >
    <div slot="visual" class="grid grid-cols-2 gap-4 sm:gap-6">
      {stats.map((stat) => (
        <div class="bg-primary/5 border border-primary/10 p-6 text-center hover:bg-primary/10 transition-colors duration-300">
          <div class="text-3xl sm:text-4xl font-bold text-primary mb-2 font-serif">{stat.value}</div>
          <div class="text-sm sm:text-base text-muted-foreground font-medium uppercase tracking-wide">{stat.label}</div>
        </div>
      ))}
    </div>
  </PageHero>

  {/* Our Story Section */}
  <section id="story" class="py-24 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        
        <!-- Image Column -->
        <div class="relative order-2 lg:order-1">
          <!-- Offset Background Square -->
          <div class="absolute -top-4 -left-4 w-full h-full bg-accent/10 border border-accent/30 z-0"></div>
          
          <div class="relative z-10 aspect-square bg-muted border border-border">
            <img
              src="https://images.unsplash.com/photo-1581056771107-24ca5f033842?auto=format&fit=crop&w=900&q=80"
              alt="Compassionate care team"
              class="absolute inset-0 w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700"
            />
            <div class="absolute inset-0 bg-primary/20 mix-blend-multiply pointer-events-none"></div>
          </div>
        </div>
        
        <!-- Content Column -->
        <div class="order-1 lg:order-2">
          <p class="text-sm font-bold uppercase tracking-widest text-primary mb-3">About Us</p>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground tracking-tight text-balance mb-6 font-serif">{storyContent.heading}</h2>
          <h3 class="text-xl text-primary font-medium mb-6">{storyContent.subheading}</h3>
          <div class="space-y-4 text-muted-foreground leading-relaxed text-lg border-l-4 border-accent/30 pl-6">
            {storyContent.paragraphs.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Values Section */}
  <section class="py-24 bg-secondary/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-sm font-bold uppercase tracking-widest text-primary mb-3">Our Values</p>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground tracking-tight text-balance mb-6 font-serif">Our Core Values</h2>
        <p class="text-lg text-muted-foreground">
          These principles guide every interaction, every care plan, and every decision we make. They are the foundation of our service.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map((value) => (
          <div class="bg-background border border-border p-8 shadow-sm hover:border-accent transition-colors duration-300 group">
            <div class="w-12 h-12 bg-primary/10 flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors duration-300 text-primary">
              {/* Simple SVG Icons based on the 'icon' property */}
              {value.icon === 'heart' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              )}
              {value.icon === 'award' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
              )}
              {value.icon === 'user' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              )}
              {value.icon === 'users' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-foreground mb-3 font-serif">{value.title}</h3>
            <p class="text-muted-foreground leading-relaxed">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Team Section - Reusing existing component */}
  <TeamSection
    eyebrow="Our Team"
    heading="[Your Team Section Heading]"
    intro="[Description of your team's expertise and commitment]"
  />

  {/* CTA Section */}
  <section class="py-20 bg-primary text-primary-foreground">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold mb-6 font-serif">[Your CTA Heading]</h2>
      <p class="text-xl opacity-90 mb-10 max-w-2xl mx-auto">
        [Your CTA description - invite visitors to take action]
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-block bg-white text-primary font-bold py-4 px-10 hover:bg-accent hover:text-white transition-all duration-300 shadow-lg transform hover:-translate-y-1">
          Contact Us Now
        </a>
        <a href="https://vertexplatformsolutions.com/offers/healthcare-agencies" target="_blank" rel="noopener" class="inline-block bg-transparent border-2 border-white text-white font-bold py-4 px-10 hover:bg-white hover:text-primary transition-all duration-300 shadow-lg transform hover:-translate-y-1">
          Get This Site Built For You
        </a>
      </div>
    </div>
  </section>

</SiteLayout>