---
import Icon from './Icon.astro';

interface ContactOption {
  icon: string;
  title: string;
  value: string;
  href: string;
  description?: string;
  primary?: boolean;
}

interface Props {
  options?: ContactOption[];
  variant?: 'hero' | 'grid';
}

const {
  variant = 'grid',
  options = [
    {
      icon: "tabler:phone",
      title: "Call Us",
      value: "[Your Phone]",
      href: "tel:[YourPhoneNumber]",
      description: "[Your availability hours]",
      primary: true
    },
    {
      icon: "tabler:brand-whatsapp",
      title: "WhatsApp",
      value: "Chat with us",
      href: "https://wa.me/[YourWhatsAppNumber]",
      description: "[Your response time]"
    },
    {
      icon: "tabler:mail",
      title: "Email Us",
      value: "[email]@yourdomain.co.uk",
      href: "mailto:[email]@yourdomain.co.uk",
      description: "[Your email response time]"
    }
  ]
} = Astro.props as Props;
---

{variant === 'hero' ? (
  <div class="grid gap-4 sm:gap-6">
    {options.map((option) => (
      <a 
        href={option.href}
        class={`flex items-center gap-4 p-4 border transition-all duration-300 group
          ${option.primary 
            ? 'bg-primary text-primary-foreground border-primary hover:bg-primary/90' 
            : 'bg-background border-border hover:border-primary hover:bg-primary/5 text-foreground'
          }`}
      >
        <div class={`flex items-center justify-center w-12 h-12 shrink-0 transition-colors
          ${option.primary ? 'bg-white/20 text-white' : 'bg-primary/10 text-primary'}`}>
          <Icon name={option.icon} class="w-6 h-6" />
        </div>
        <div>
          <p class="font-medium text-sm opacity-80">{option.title}</p>
          <p class="font-bold text-lg">{option.value}</p>
        </div>
        <Icon name="tabler:arrow-right" class="w-5 h-5 ml-auto opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all" />
      </a>
    ))}
  </div>
) : (
  <div class="grid md:grid-cols-3 gap-8">
    {options.map((option) => (
      <a 
        href={option.href}
        class="group flex flex-col items-center text-center p-8 bg-card border border-border hover:border-accent hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
      >
        <div class="w-16 h-16 bg-primary/10 text-primary flex items-center justify-center mb-6 group-hover:scale-110 group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300">
          <Icon name={option.icon} class="w-8 h-8" />
        </div>
        <h3 class="text-xl font-bold text-foreground mb-2 font-serif">{option.title}</h3>
        <p class="text-lg font-medium text-primary mb-2">{option.value}</p>
        {option.description && (
          <p class="text-sm text-muted-foreground">{option.description}</p>
        )}
      </a>
    ))}
  </div>
)}