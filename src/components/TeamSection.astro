---
interface TeamMember {
  name: string;
  role: string;
  description: string;
  image: string;
  imageAlt?: string;
  credentials?: string;
}

interface Props {
  eyebrow?: string;
  heading?: string;
  intro?: string;
  members?: TeamMember[];
}

const {
  eyebrow = "Our Team",
  heading = "[Your Team Heading]",
  intro = "[Description of your team's expertise and commitment to clients]",
  members = [
    {
      name: "[Team Member 1 Name]",
      role: "[Role/Title]",
      credentials: "[Qualifications]",
      description: "[Brief bio - their experience and what they bring to the team]",
      image: "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?auto=format&fit=crop&w=800&q=80",
      imageAlt: "[Team member 1 photo description]",
    },
    {
      name: "[Team Member 2 Name]",
      role: "[Role/Title]",
      credentials: "[Qualifications]",
      description: "[Brief bio - their experience and what they bring to the team]",
      image: "https://images.unsplash.com/photo-1537368910025-700350fe46c7?auto=format&fit=crop&w=800&q=80",
      imageAlt: "[Team member 2 photo description]",
    },
    {
      name: "[Team Member 3 Name]",
      role: "[Role/Title]",
      credentials: "[Qualifications]",
      description: "[Brief bio - their experience and what they bring to the team]",
      image: "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?auto=format&fit=crop&w=800&q=80",
      imageAlt: "[Team member 3 photo description]",
    },
  ],
} = Astro.props as Props;
---

<section class="bg-background py-24 lg:py-32" id="team">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16">
      {eyebrow && (
        <p class="text-sm font-bold uppercase tracking-widest text-primary mb-3">
          {eyebrow}
        </p>
      )}
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground tracking-tight text-balance mb-6 font-serif">
        {heading}
      </h2>
      <p class="text-lg text-muted-foreground text-balance leading-relaxed">
        {intro}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
      {members.map((member) => (
        <div class="group relative bg-card border border-accent/30 hover:border-accent transition-colors duration-300 flex flex-col h-full">
          <!-- Image Container -->
          <div class="relative aspect-[4/5] overflow-hidden bg-muted border-b border-accent/30">
            <img
              src={member.image}
              alt={member.imageAlt || member.name}
              class="h-full w-full object-cover transition-all duration-700 filter grayscale group-hover:grayscale-0 group-hover:scale-105"
            />
            
            <!-- Green Overlay -->
            <div class="absolute inset-0 bg-primary/20 mix-blend-multiply group-hover:bg-transparent transition-colors duration-500"></div>
            
            <!-- Social Bar (Overlay) -->
            <div class="absolute bottom-0 left-0 right-0 bg-primary py-3 px-6 flex justify-between items-center z-10">
                <span class="text-primary-foreground/80 text-xs font-medium uppercase tracking-wider">Connect</span>
                <div class="flex gap-4">
                <a href="#" class="text-primary-foreground hover:text-white transition-colors" aria-label={`Connect with ${member.name} on LinkedIn`}>
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd" />
                    </svg>
                </a>
                <a href="#" class="text-primary-foreground hover:text-white transition-colors" aria-label={`Email ${member.name}`}>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </a>
                </div>
            </div>
          </div>

          <!-- Content -->
          <div class="p-6 flex-1 text-left">
            <h3 class="text-2xl font-bold text-foreground mb-2 font-serif group-hover:text-primary transition-colors">
              {member.name}
            </h3>
            <p class="text-sm font-bold text-accent uppercase tracking-wider mb-4 flex items-center gap-2">
              {member.role} 
              {member.credentials && (
                <span class="text-muted-foreground font-normal normal-case border-l border-border pl-2">
                  {member.credentials}
                </span>
              )}
            </p>
            <p class="text-muted-foreground leading-relaxed text-base">
              {member.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
