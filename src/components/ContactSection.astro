---
import Icon from './Icon.astro';

interface Props {
  heading?: string;
  intro?: string;
  phoneLabel?: string;
  phoneHref?: string;
  emailLabel?: string;
  emailHref?: string;
  address?: string;
}

const {
  heading = "[Your Contact Section Heading]",
  intro = "[Your contact section description - invite visitors to reach out]",
  phoneLabel = "[Your Phone]",
  phoneHref = "tel:[YourPhoneNumber]",
  emailLabel = "[email]@yourdomain.co.uk",
  emailHref = "mailto:[email]@yourdomain.co.uk",
  address = "[Your City, Region]"
} = Astro.props as Props;
---

<section class="relative bg-primary py-24 lg:py-32 overflow-hidden" id="contact">
  <!-- Background Pattern (Blocky Grid) -->
  <div class="absolute inset-0 opacity-10" style="background-image: linear-gradient(#ffffff 1px, transparent 1px), linear-gradient(90deg, #ffffff 1px, transparent 1px); background-size: 40px 40px;"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white tracking-tight text-balance mb-6 font-serif">
          {heading}
        </h2>
        <p class="text-lg text-primary-foreground/90 text-balance leading-relaxed mb-10">
          {intro}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-0 justify-center lg:justify-start">
          <a
            href={phoneHref}
            class="inline-flex items-center justify-center gap-2 bg-white px-8 py-4 text-lg font-bold text-primary shadow-lg transition-all hover:bg-gray-50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-primary"
          >
            <Icon name="tabler:phone" size="24" />
            Call: {phoneLabel}
          </a>
          <a
            href={emailHref}
            class="inline-flex items-center justify-center gap-2 bg-primary-foreground/10 border border-white/30 px-8 py-4 text-lg font-semibold text-white backdrop-blur-sm transition-all hover:bg-white/20 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-primary"
          >
            <Icon name="tabler:mail" size="24" />
            Email Us
          </a>
        </div>
      </div>

      <!-- Contact Cards -->
      <div class="grid gap-6">
        <!-- Office Card -->
        <div class="bg-white/10 backdrop-blur-md border border-white/20 p-8 text-white shadow-sm">
          <div class="flex items-start gap-4">
            <div class="p-3 bg-white/20">
              <Icon name="tabler:map-pin" size="24" class="text-white" />
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2 font-serif">Head Office</h3>
              <p class="text-primary-foreground/80 leading-relaxed">
                {address}
              </p>
              <a href="#" class="inline-block mt-4 text-sm font-semibold border-b border-white/40 hover:border-white transition-colors">
                Get Directions &rarr;
              </a>
            </div>
          </div>
        </div>

        <!-- Hours Card -->
        <div class="bg-white p-8 shadow-xl text-foreground">
          <div class="flex items-start gap-4">
            <div class="p-3 bg-primary/10 text-primary">
              <Icon name="tabler:clock-hour-4" size="24" />
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2 font-serif">Office Hours</h3>
              <ul class="space-y-2 text-muted-foreground">
                <li class="flex justify-between gap-8">
                  <span>Monday - Friday</span>
                  <span class="font-medium text-foreground">9:00 AM - 6:00 PM</span>
                </li>
                <li class="flex justify-between gap-8">
                  <span>Saturday</span>
                  <span class="font-medium text-foreground">10:00 AM - 4:00 PM</span>
                </li>
                <li class="flex justify-between gap-8">
                  <span>Sunday</span>
                  <span class="font-medium text-foreground">Closed</span>
                </li>
              </ul>
              <p class="mt-4 text-xs text-muted-foreground bg-muted p-2">
                * Emergency support available 24/7 for existing clients
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
