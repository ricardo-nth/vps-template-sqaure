---
import Icon from './Icon.astro';

interface Pillar {
  icon: string;
  title: string;
  description: string;
  cqcEvidence: string;
}

interface Props {
  heading?: string;
  subheading?: string;
  pillars?: Pillar[];
}

const {
  heading = "CQC Outstanding Across All 5 Pillars",
  subheading = "Regulators trust our evidence-based approach. Service users love our outcomes. Families choose us for peace of mind.",
  pillars = [
    {
      icon: "tabler:shield-check",
      title: "Safe",
      description: "Robust safeguarding, infection control, and risk management exceeding CQC standards.",
      cqcEvidence: "Zero serious incidents"
    },
    {
      icon: "tabler:target-arrow",
      title: "Effective",
      description: "Evidence-based care plans delivering measurable improvements in independence and wellbeing.",
      cqcEvidence: "98% goal achievement"
    },
    {
      icon: "tabler:heart-handshake",
      title: "Caring",
      description: "Compassionate staff trained in dignity, privacy, and person-centred support.",
      cqcEvidence: "Outstanding feedback"
    },
    {
      icon: "tabler:list-details",
      title: "Responsive",
      description: "Rapid response to changing needs with flexible, adaptive care packages.",
      cqcEvidence: "24hr escalation protocol"
    },
    {
      icon: "tabler:crown",
      title: "Well-Led",
      description: "Visionary leadership with transparent governance and continuous improvement culture.",
      cqcEvidence: "Staff retention 92%"
    }
  ]
} = Astro.props as Props;
---

<section class="relative py-24 lg:py-32 overflow-hidden bg-background">
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-20">
      <p class="text-sm font-bold uppercase tracking-widest text-primary mb-3">CQC Standards</p>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight text-foreground mb-6 font-serif">
        {heading}
      </h2>
      <p class="text-xl text-muted-foreground leading-relaxed">
        {subheading}
      </p>
    </div>

    <div class="flex flex-wrap justify-center gap-6 lg:gap-8">
      {pillars.map((pillar, index) => (
        <div class="group relative flex flex-col bg-card hover:bg-card/50 border border-border hover:border-accent p-8 transition-all duration-300 hover:-translate-y-1 w-full md:w-[calc(50%-1.5rem)] lg:w-[calc(33.33%-1.5rem)] max-w-md">
          
          <!-- Icon -->
          <div class="relative z-10 mb-6">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-primary/10 text-primary group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300">
              <Icon name={pillar.icon} class="w-6 h-6" />
            </div>
          </div>

          <!-- Content -->
          <div class="relative z-10 flex-1">
            <h3 class="text-lg font-bold text-foreground mb-3 font-serif group-hover:text-primary transition-colors">
              {pillar.title}
            </h3>
            <p class="text-sm text-muted-foreground leading-relaxed mb-6">
              {pillar.description}
            </p>
          </div>

          <!-- Evidence Badge -->
          <div class="relative z-10 mt-auto pt-4 border-t border-border/50">
            <div class="flex items-center gap-2 text-xs font-medium text-primary/80 uppercase tracking-wider">
              <Icon name="tabler:check" class="w-4 h-4" />
              <span>{pillar.cqcEvidence}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>